<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_margin="16dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagem do Caminh達o -->
        <ImageView
            android:id="@+id/caminhao_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Imagem do Caminh達o"
            android:scaleType="centerCrop"
            android:elevation="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/caminhao_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caminh達o"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- Texto para a placa do caminh達o -->
            <TextView
                android:id="@+id/caminhao_placa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/caminhao_ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
